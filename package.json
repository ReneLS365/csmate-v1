{
  "name": "csmate",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "build:hulmose": "node scripts/build-hulmose-from-dataset.mjs",
    "test": "vitest run",
    "lint": "eslint \"app/src/**/*.js\" \"scripts/**/*.js\"",
    "bump-sw": "node scripts/bump-sw-version.js",
    "cache:report": "node scripts/cache-report.js",
    "gen:template": "node scripts/generate-template.js",
    "dump:config": "node scripts/dump-config.js",
    "serve:dist": "http-server dist -p 4173 -s",
    "serve": "http-server -p 4173 -c-1 .",
    "twa:init": "echo \"Brug: export PROD_URL=https://DIT-DOMAE NE; npx bubblewrap init --manifest=\\\"$PROD_URL/manifest.webmanifest\\\" --directory twa && cd twa && jq '.packageId=\"com.csmate.app\"' twa-manifest.json > tmp && mv tmp twa-manifest.json\"",
    "twa:update": "cd twa && npx bubblewrap update",
    "twa:build": "cd twa && npx bubblewrap build",
    "serve:ci": "http-server -p 4173 -c-1 . >/dev/null 2>&1",
    "e2e": "playwright test --project=chromium",
    "e2e:headed": "playwright test --headed --project=chromium",
    "test:e2e": "playwright test --reporter=line",
    "ci": "npm run lint && npm run test -- --coverage && npm run build"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.47.2",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "http-server": "^14.1.1",
    "start-server-and-test": "^2.0.3",
    "netlify-plugin-minify-html": "^0.3.1",
    "wait-on": "^8.0.2",
    "jsdom": "^27.0.0",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2"
  }
}
